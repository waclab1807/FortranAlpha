<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    style="@style/Base.TextAppearance.AppCompat.Display2">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/wartosc1"
            android:layout_row="0"
            android:layout_column="0"
            android:inputType="wartosc1" />

        <EditText
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/wartosc2"
            android:layout_row="2"
            android:layout_column="0"
            android:inputType="wartosc2" />

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/operator"
            android:layout_row="1"
            android:layout_column="0"
            android:inputType="operator" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minus"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/mnozenie"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/dzielenie"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:id="@+id/potega"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="√"
            android:id="@+id/pierwiastek"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="π"
            android:id="@+id/pi"
            android:layout_row="3"
            android:layout_column="3" />

        <TextView
            android:layout_width="182dp"
            android:layout_height="66dp"
            android:id="@+id/wynik"
            android:layout_row="4"
            android:layout_column="0" />
    </GridLayout>
</LinearLayout>