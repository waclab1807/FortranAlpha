<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fefefa">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Kąty - zależności"
                    android:id="@+id/Opis_figury"
                    android:layout_marginTop="56dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView"
                        android:src="@drawable/katy"
                        android:layout_below="@+id/Opis_figury"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignBottom="@+id/d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="e"
                        android:id="@+id/e"
                        android:layout_alignBaseline="@+id/e_text"
                        android:layout_alignBottom="@+id/e_text"
                        android:layout_toLeftOf="@+id/g"
                        android:layout_toStartOf="@+id/g"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="g"
                        android:id="@+id/g"
                        android:layout_alignTop="@+id/h"
                        android:layout_alignLeft="@+id/a"
                        android:layout_alignStart="@+id/a" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="f"
                        android:id="@+id/f"
                        android:layout_alignBaseline="@+id/c_text"
                        android:layout_alignBottom="@+id/c_text"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="b"
                        android:id="@+id/e_text"
                        android:onClick="true"
                        android:layout_alignBottom="@+id/d"
                        android:layout_alignLeft="@+id/h"
                        android:layout_alignStart="@+id/h"
                        android:layout_marginBottom="21dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="d"
                        android:onClick="true"
                        android:id="@+id/c_text"
                        android:layout_above="@+id/e_text"
                        android:layout_toRightOf="@+id/e_text"
                        android:layout_toEndOf="@+id/e_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="c"
                        android:id="@+id/d"
                        android:onClick="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/g"
                        android:layout_alignEnd="@+id/g"
                        android:layout_marginBottom="292dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="h"
                        android:id="@+id/h"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_above="@+id/e_text"
                        android:layout_toRightOf="@+id/Opis_figury"
                        android:layout_toEndOf="@+id/Opis_figury"
                        android:layout_marginBottom="67dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="a"
                        android:id="@+id/a"
                        android:onClick="true"
                        android:layout_above="@+id/g"
                        android:layout_alignRight="@+id/Opis_figury"
                        android:layout_alignEnd="@+id/Opis_figury"
                        android:layout_marginBottom="34dp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="467dp"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="380dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Pamiętaj o stosowaniu nawiasów!"
                        android:id="@+id/textView13" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="                          "
                        android:id="@+id/textView14" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="a: "
                        android:id="@+id/textView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/a_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="100"
                        android:focusableInTouchMode="true"
                        android:text="120" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="b: "
                        android:id="@+id/textView2" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="35"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="c: "
                        android:id="@+id/textView3" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="35"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="d: "
                        android:id="@+id/textView4" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="100"
                        android:focusableInTouchMode="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="e: "
                        android:id="@+id/textView5" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/e_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="100"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="f: "
                        android:id="@+id/textView6" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="100"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="g: "
                        android:id="@+id/textView7" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/g_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="100"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="h: "
                        android:id="@+id/textView8" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/h_val"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:maxLength="100"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>

                <Button
                    android:layout_width="178dp"
                    android:layout_height="73dp"
                    android:drawableLeft="@drawable/calculator"
                    android:textSize="20dp"
                    android:text=" Policz"
                    android:id="@+id/licz"
                    android:background="#CC6B17"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/a"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:text="Wyczyść"
                            android:id="@+id/clear"
                            android:background="#CC6B17"
                            android:layout_alignBottom="@+id/btnsqrt"
                            android:layout_gravity="center_vertical" />

                        <Button
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:text="Wstaw\npierwiastek\n\u221a"
                            android:id="@+id/btnsqrt"
                            android:background="#CC6B17"
                            android:layout_alignBottom="@+id/imageView"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_vertical" />

                        <Button
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:text="Wstaw\npotęgę\nx^y"
                            android:id="@+id/btnpow"
                            android:background="#CC6B17"
                            android:layout_alignTop="@+id/btnsqrt"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:text="Rozwiązanie"
                    android:textSize="20dp"
                    android:background="#CC6B17"
                    android:id="@+id/solutionbtn"
                    android:layout_gravity="center_horizontal" />


                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/webView2"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
